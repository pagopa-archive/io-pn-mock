{
  "name": "io-pn-mock",
  "version": "0.0.1",
  "description": "mock project for the PN infrastructure",
  "repository": "https://github.com/pagopa/io-pn-mock",
  "author": "https://pagopa.gov.it",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx",
    "start": "node -r dotenv/config dist/index.js",
    "watch": "nodemon -r dotenv/config src/index.ts",
    "pregenerate": "npm-run-all openapi:*",
    "openapi:bundle-courtesy": "bundle-api-spec --api-spec ./docs/openapi/pn-address-book-b2b-external-io-v1.yaml --out-path ./docs/openapi/bundled-openapi.yaml",
    "openapi:bundle-delivery": "bundle-api-spec --api-spec ./docs/openapi/delivery/pn-delivery.yaml --out-path ./docs/openapi/delivery/bundled-delivery.yaml",
    "generate": "npm-run-all generate:*",
    "generate:openapi": "gen-api-models --api-spec ./docs/openapi/bundled-openapi.yaml --out-dir ./src/generated/ --strict false",
    "generate:functions-services": "bash ./scripts/fn_services_generate.sh",
    "generate:pn-delivery": "gen-api-models --api-spec ./docs/openapi/delivery/bundled-delivery.yaml --out-dir ./src/generated/ --strict false"
  },
  "devDependencies": {
    "@pagopa/danger-custom-rules": "^2.0.3",
    "@pagopa/eslint-config": "^1.3.1",
    "@pagopa/openapi-codegen-ts": "^11.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.17.0",
    "@types/node-fetch": "^2.6.2",
    "danger": "^11.0.7",
    "danger-plugin-digitalcitizenship": "*",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^25.2.7",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "supertest": "^6.2.4",
    "ts-jest": "^25.3.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@pagopa/io-functions-commons": "^25.5.1",
    "@pagopa/ts-commons": "^10.8.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "fp-ts": "^2.12.1",
    "io-ts": "^2.2.16",
    "logform": "^2.4.2",
    "node-fetch": "^2",
    "winston": "^3.8.1"
  }
}
